<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriterActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hv_container_bg"
        android:padding="6dip" >

        <jie.example.widget.WriterView
            android:id="@+id/writerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hv_container_height"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="6dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/writerView"
            android:orientation="horizontal"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_confirm"
                style="@style/WrapContentButtonStyle"
                android:layout_marginRight="12dip"
                android:text="@string/confirm" 
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_clear"
                style="@style/WrapContentButtonStyle"
                android:layout_marginLeft="12dip"
                android:text="@string/clear" 
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>