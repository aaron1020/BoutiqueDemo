<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaptureActivity" >

    <SurfaceView
        android:id="@+id/scanning_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <jie.example.camera.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/activity_title_top"
        layout="@layout/actionbar_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:alpha="0.6"
        android:background="@drawable/scan_bottombar_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/item_qrcode"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/scan_qrcode_bg"
            android:gravity="center"
            android:text="@string/scan_qrcode"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/item_onecode"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/scan_barcode_bg"
            android:gravity="center"
            android:text="@string/scan_barcode"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/item_help"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/scan_help_bg"
            android:gravity="center"
            android:text="@string/scan_help"
            android:textColor="@android:color/white" />
    </LinearLayout>

</merge>